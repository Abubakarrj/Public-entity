# CONCIERGE SERVER — Environment Variables
# ════════════════════════════════════════════════════════════

# Server
PORT=3001

# Linqapp Credentials
# Linqapp Credentials (REQUIRED — get from your Linqapp dashboard)
LINQAPP_API_TOKEN=your_secret_token_here
LINQAPP_PHONE=your_phone_number_here

# Linqapp v3 API — POST phone + message to /chats
LINQAPP_SEND_URL=https://api.linqapp.com/api/partner/v3/chats

# Webhook verification (get this from Linqapp if they provide one)
LINQAPP_WEBHOOK_SECRET=

# Your dashboard URL (for CORS)
DASHBOARD_ORIGIN=http://localhost:3000
